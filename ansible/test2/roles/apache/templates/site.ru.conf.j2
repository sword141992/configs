<VirtualHost *:81>
    ServerName {{server_host1}}
    ServerAlias www.{{server_host1}}

    DocumentRoot /var/www/{{server_host1}}
    CustomLog ${APACHE_LOG_DIR}/site.access.log combined
    ErrorLog ${APACHE_LOG_DIR}/site.error.log

    php_admin_value open_basedir "/var/www/{{server_host1}}/:/var/lib/php/sessions/:/var/www/phpmyadmin/:/tmp"
</VirtualHost>